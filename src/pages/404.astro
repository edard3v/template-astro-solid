---
import Btn from "@components/buttons/Btn/Btn.astro";
import { Icon } from "astro-icon/components";
import "@styles/index.css";
---

<div class="wrapper">
  <Icon name={"404"} />
  <Btn onclick={"history.back()"}>Volver</Btn>
</div>

<style>
  .wrapper {
    display: grid;
    place-content: center;
    min-height: 100dvh;
    background-color: var(--bg_main);
    color: var(--paras);

    svg {
      width: 280px;
      height: 280px;
    }

    button {
      justify-self: center;
    }
  }
</style>
